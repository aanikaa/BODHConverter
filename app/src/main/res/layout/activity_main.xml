<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calineczka.bodhconverter.MainActivity"
    android:gravity="center"
    android:columnCount="4"
    android:rowCount="4"
    android:background="@color/background"
    android:foregroundGravity="center"
    android:useDefaultMargins="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/binary"
        android:id="@+id/NameBin"
        android:layout_column="0"
        android:layout_row="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/BinEditText"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:background="@color/textBackground"
        android:textColor="@color/textColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BinTextView"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:textColor="@color/textColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Oct"
        android:id="@+id/NameOct"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/OctEditText"
        android:layout_columnSpan="2"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@color/textBackground"
        android:textColor="@color/textColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OctTextView"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:textColor="@color/textColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Decimal"
        android:id="@+id/NameDec"
        android:layout_column="0"
        android:layout_row="2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/DecEditText"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:background="@color/textBackground"
        android:textColor="@color/textColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DecTextView"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:textColor="@color/textColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Hexdec"
        android:id="@+id/NameHex"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HexEditText"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="3"
        android:inputType="text"
        android:background="@color/textBackground"
        android:textColor="@color/textColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HexTextView"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:layout_column="1"
        android:textColor="@color/textColor" />
</GridLayout>
